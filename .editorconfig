# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = space

# NOTE: SvelteKit uses tabs for indentation, which is not really idiomatic for
# the JavaScript community in general. We prefer consistency, so we're sticking
# with 2 spaces everywhere.

